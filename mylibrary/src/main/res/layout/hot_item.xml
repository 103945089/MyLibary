<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/linear_item"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_hot"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:transitionName="vdp"
        android:layout_alignLeft="@id/img_hot"
        android:layout_alignRight="@id/img_hot"
        android:layout_alignBottom="@id/img_hot"
        android:layout_alignTop="@id/img_hot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btPlay"
            android:src="@drawable/ic_bf"
            android:layout_centerInParent="true"
            android:layout_width="35dp"
            android:layout_height="35dp" />
    </RelativeLayout>

    <TextView
        android:layout_below="@+id/img_hot"
        android:id="@+id/tvTittleHotItem"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textColor="@color/text_black"
        android:padding="5dp"
        android:lines="2"
        android:text="中国成功组织航天员沙漠野外生存训练"/>

    <LinearLayout
        android:layout_below="@+id/tvTittleHotItem"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国航天"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="@color/text_grey"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/text_grey"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3小时"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:textColor="@color/text_grey"/>
    </LinearLayout>
</RelativeLayout>