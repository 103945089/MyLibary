<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/loBack"
        android:background="#f20909"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <TextView
            android:id="@+id/tvTitle"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/btExit"
            android:src="@drawable/nav_back"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/btColl"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:src="@drawable/ic_sc_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp" >
        <ImageView
            android:id="@+id/img_article"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="200dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_article_detail_jianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专题简介:"
                android:textColor="@color/red"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_article_detail_conetent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:lines="4"
                android:text="            "/>
        </RelativeLayout>
    </RelativeLayout>

    <GridView
        android:id="@+id/grid_article"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"/>
</LinearLayout>